<Window x:Class="SoundPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="820">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/BackgroundSoundPlayer.png"/>
        </Grid.Background>
        <Button Content="Sound 1" HorizontalAlignment="Left" Margin="10,376,0,0" VerticalAlignment="Top" Height="48" Width="81" Name="BtnSound1" Click="BtnSound1_Click"/>
        <Button Content="Beenden" HorizontalAlignment="Left" Margin="594,370,0,0" VerticalAlignment="Top" Height="51" Width="196" x:Name="BtnSound2" FontSize="20" Click="BtnSound2_Click_1" />
        <Button Content="Klavier" HorizontalAlignment="Left" Margin="290,0,0,0" VerticalAlignment="Center" Height="67" Width="199" Click="Button_Click"/>
        <Label Content="Willkommen bei meinem Sound Player" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" Height="44" Width="430" FontSize="24" FontFamily="Bahnschrift" Background="{x:Null}" Foreground="#FFF9F9F9" FontWeight="Bold"/>


    </Grid>
</Window>
